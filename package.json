{
  "name": "backend-projectpartner",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "serve": "concurrently \"tsc -w\" \"nodemon -r dotenv/config dist/index.js\"",
    "start": "node -r dotenv/config dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongodb": "^6.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
